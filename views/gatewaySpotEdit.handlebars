<!-- Heading -->
<div
    class="pageinfo px-3 px-lg-5 py-3 py-lg-4 d-flex flex-wrap-reverse justify-content-between bg-blue-1 rounded-15 shadow-c-1">
    <div class="pageinfo__text d-flex flex-column justify-content-between">
        <div class="mt-3 mt-sm-0">
            <h1 class="fw-bold text-blue-4" >Gateway Spot: <span id="gateway-spot-name" data-id="{{id}}"></span></h1>
            <p class="pageinfo__description text-blue-3 fw-light">
                On this page you can <b class="fw-bold"> re-link </b> gateway spot and gateway device. You can also change/remove linked smart door nodes.
            </p>
        </div>
        <a href="/dashboard/gateway/list" class="pageinfo__link bg-blue-4 text-blue-1 text-center p-2 rounded-10 fw-bold fs-6">
            Gateway Spot List
        </a>
    </div>
    <img src="/image/illustration-desk.png" class="pageinfo__image " alt="Ilustrasi Desktop">
</div>

<form class="serach__form mt-5">
    <label for="building" class="fw-bold mb-1">Gateway Spot Name</label>
    <input type="text" id="gatewaySpotName" class="rounded-10 me-3 border-dark p-2 text-neutral-2">
</form>

<!-- Building Form -->
<div class="d-flex flex-column flex-sm-row align-items-sm-start gx-5 mt-5 buildinginfo">
    <!-- NODE DEVICE -->
    <div class="buildinginfo__items d-flex flex-column justify-content-between me-0 me-sm-3">
        <div
            class="buildinginfo__card d-flex align-items-center justify-content-between bg-neutral-7 shadow-c-1 p-3 rounded-10">
            <div class="d-flex align-items-center">
                <img src="/image/icon_building_rounded.svg" alt="" class="buildinginfo__icon">
                <p class="fw-light fs-4 fw-bold text-neutral-2 ms-3">
                    Linked Smart Door Node
                    <span class="hover-tool pointer" data-hover="You cannot create a smart door node, the node will appear automatically if the node device has been connected to the gateway device.">
                        <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" fill="currentColor"
                            class="bi bi-question-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path
                                d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z" />
                        </svg>
                    </span>
                </p>
            </div>
            <p class="fw-bold fs-2 text-neutral-1" id="linkedNodeCount">-</p>
        </div>

        <div class="buildinginfo__form mt-3 bg-neutral-7 rounded-10 p-3 mb-4 mb-sm-3">
            <form class="mb-2">
                <label for="duid-auto" class="mb-1 d-block">Device Unique ID</label>
                <div class="d-flex justify-content-between align-items-stretch">

                    <input type="text" class="p-2 form__input me-3 rounded-10 text-neutral-2"
                        id="duid-auto" placeholder="Search DUID Not Active Now">

                    <button type="button"
                        class="form__action bg-blue-2 text-neutral-7 fw-bold text-center">
                        Search
                    </button>
                </div>

                <label for="device_Id" class="mb-1 mt-2 d-block">Device Unique ID</label>
                <div class="d-flex justify-content-between align-items-stretch" id="duid">

                    <input type="text" class="p-2 form__input me-3 rounded-10 text-neutral-2"
                        id="device_Id" disabled>

                    <button type="button" id="nodeAddButton"
                        class="form__action bg-blue-4 text-neutral-7 fw-bold text-center">
                        Add
                    </button>
                </div>
            </form>
        </div>

        <!-- TABEL -->
        <div
            class="table-header d-flex justify-content-between bg-neutral-7 py-2 rounded-13 mb-3 px-3 shadow">
            <p class="table-data fw-bold text-center text-neutral-2">DUID</p>
            <p class="table-data fw-bold text-center text-neutral-2">Action</p>
        </div>

        <div class="table-content bg-neutral-7 rounded-13 shadow-c-1" id="nodeList">
            {{!-- Node List --}}
        </div>
    </div>

    <!-- GATEWAY -->
    <div
        class="buildinginfo__items d-flex flex-column justify-content-between ms-0 mt-5 mt-sm-0 ms-sm-3">
        <div
            class="buildinginfo__card d-flex align-items-center justify-content-between bg-neutral-7 p-3 rounded-10 shadow-c-1">
            <div class="d-flex align-items-center">
                <img src="/image/icon_user_rounded.svg" alt="" class="buildinginfo__icon">
                <p class="fw-light fs-4 fw-bold text-neutral-2 ms-3">Gateway Device Short ID</p>
            </div>
            <p class="fw-bold fs-2 text-neutral-1" id="gatewayCount">-</p>
        </div>

        <div class="buildinginfo__form mt-3 bg-neutral-7 rounded-10 p-3 mb-4 mb-sm-3">
            <form class="mb-2">
                <label for="gatewayDevice" class="mb-1 d-block">Gateway Device</label>
                <div class="d-flex justify-content-between align-items-stretch">

                    <input type="text" class="p-2 form__input me-3 rounded-10 text-neutral-2"
                        id="gatewayDevice" placeholder="Search Gateway Device Short ID">

                    <button type="button"
                        class="form__action bg-blue-2 text-neutral-7 fw-bold text-center">
                        Search
                    </button>
                </div>

                <label for="gatewayID" class="mb-1 mt-2 d-block">Gateway ID</label>
                <div class="d-flex justify-content-between align-items-stretch">

                    <input type="text" class="p-2 form__input me-3 rounded-10 text-neutral-2"
                        id="gatewayID" disabled>

                    <button type="button" id="gatewayAddButton"
                        class="form__action bg-blue-4 text-neutral-7 fw-bold text-center">
                        Add
                    </button>
                </div>
            </form>
        </div>

        <!-- TABEL -->
        <div
            class="table-header d-flex justify-content-between bg-neutral-7 py-2 rounded-13 mb-3 px-3 shadow">
            <p class="table-data fw-bold text-center text-neutral-2">Gateway Device</p>
            <p class="table-data fw-bold text-center text-neutral-2">Action</p>
        </div>

        <div class="table-content bg-neutral-7 rounded-13 shadow-c-1" id="gatewayList">
            {{!-- GATEWAY DATA --}}
        </div>
    </div>

</div>
<p class="text-center mt-4 pointer py-2 rounded-13 bg-blue-4 text-neutral-7 fw-bold mb-5" id="save">SAVE DATA</p>