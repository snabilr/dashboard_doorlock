<!-- Heading -->
<div
  class="pageinfo px-3 px-lg-5 py-3 py-lg-4 d-flex flex-wrap-reverse justify-content-between bg-blue-1 rounded-15 shadow-c-1"
>
  <div class="pageinfo__text d-flex flex-column justify-content-between">
    <div class="mt-3 mt-sm-0">
      <h1 class="fw-bold text-blue-4 card-id" data-card="{{id}}">Card Detail:
        {{id}}</h1>
      <p class="pageinfo__description text-blue-3 fw-light">
        This menu is used to update card data or modify existing data.
      </p>
    </div>
    <a
      href="/dashboard/card/list"
      class="pageinfo__link bg-blue-4 text-blue-1 text-center p-2 rounded-10 fw-bold fs-6"
    >
      Card List
    </a>
  </div>
  <img
    src="/image/illustration-desk.png"
    class="pageinfo__image"
    alt="Ilustrasi Desktop"
  />
</div>

<h3 class="fw-bolder mt-5 text-neutral-2 mb-4">Card Detail</h3>
<div
  class="mt-5 mb-3 d-flex flex-column-reverse flex-lg-row align-items-lg-start"
>
  <form action="" class="card-form me-0 me-lg-5">
    <div
      class="mb-3 card-form-group d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-end"
    >
      <label
        for="username"
        class="d-block fw-bold text-neutral-2"
      >Username</label>
      <input type="text" id="username" disabled value="Loading For Username" />
    </div>

    <div
      class="mb-3 card-form-group d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-end"
    >
      <label for="cardNumber" class="d-block fw-bold text-neutral-2">Card Number</label>
      <input
        type="text"
        id="cardNumber"
        disabled
        value="Loading For Card Number"
      />
    </div>

    <div
      class="mb-3 card-form-group d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-end"
    >
      <label for="cardName" class="d-block fw-bold text-neutral-2">Card Name</label>
      <input type="text" id="cardName" value="Loading For Card Name" />
    </div>

    <div
      class="mb-3 card-form-group d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-end"
    >
      <label for="card-type" class="d-block fw-bold text-neutral-2">Card Type</label>
      <select class="rounded-13" id="card-type">
        <option value="card_atm">Bank</option>
        <option value="card_id">ID Card</option>
        <option value="card_studentid">Student Card</option>
        <option value="card_emoney">E Money</option>
        <option value="card_driver">Driver License</option>
      </select>
    </div>

    <div
      class="mb-3 card-form-group d-flex align-items-start align-items-lg-center justify-content-end"
    >
      <label
        class="form-check-label fw-bold text-neutral-2 me-3"
        for="auth-type"
      >Two Step Authentication</label>
      <div class="form-check form-switch">
        <input
          class="form-check-input"
          class="pointer"
          type="checkbox"
          role="switch"
          id="auth-type"
          title="isTwoStepAuth"
        />
      </div>
    </div>

    <div
      class="mb-3 card-form-group d-flex align-items-start align-items-lg-center justify-content-end"
    >
      <label
        class="form-check-label fw-bold text-neutral-2 me-3 hover-tool pointer"
        data-hover="If the card is blocked, the card will not be able to access the room"
        for="banned-card"
      >
        Block Card
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="10"
          height="10"
          fill="currentColor"
          class="bi bi-question-circle"
          viewBox="0 0 16 16"
        >
          <path
            d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"
          />
          <path
            d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z"
          />
        </svg>
      </label>
      <div class="form-check form-switch">
        <input
          class="form-check-input"
          class="pointer"
          type="checkbox"
          role="switch"
          id="banned-card"
          title="isTwoStepAuth"
        />
      </div>
    </div>

    <div
      class="mb-3 row"
    >
      <div class="col-6">

        <label
          class="form-check-label fw-bold text-neutral-2 me-3 hover-tool pointer"
          data-hover="Start time when card will have access to rooms"
          for="startAccessTime"
        >
          Start Access Hour
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="10"
            height="10"
            fill="currentColor"
            class="bi bi-question-circle"
            viewBox="0 0 16 16"
          >
            <path
              d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"
            />
            <path
              d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z"
            />
          </svg>
        </label>
        <input
          type="number"
          id="startAccessTime"
          min="0"
          max="23"
        />
      </div>

      <div class="col-6">

        <label
          class="form-check-label fw-bold text-neutral-2 me-3 hover-tool pointer"
          data-hover="End time when card will no longer have access to rooms"
          for="endAccessTime"
        >
          End Access Hour
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="10"
            height="10"
            fill="currentColor"
            class="bi bi-question-circle"
            viewBox="0 0 16 16"
          >
            <path
              d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"
            />
            <path
              d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z"
            />
          </svg>
        </label>
        <input
          type="number"
          id="endAccessTime"
          min="0"
          max="23"
        />
      </div>
    </div>

    <div
      class="card-form-group d-flex align-items-start align-items-lg-center justify-content-end"
    >
      <button
        class="text-center text-blue-3 pointer me-3 bg-blue-2 py-1 px-2 rounded-13"
        id="save-change"
      >Save Change</button>
      <a
        href="/dashboard/card/admin-modify-pin/{{id}}"
        class="text-center text-blue-3 bg-blue-2 py-1 px-2 rounded-13"
      >Change Pin</a>
    </div>
  </form>
  <img
    src="/image/icon_card_atm.svg"
    alt=""
    class="d-block card-image mb-4 mb-lg-0"
  />
</div>

