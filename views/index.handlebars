<h3 class="fw-bolder text-neutral-2 mt-3">Dashboard</h3>

<div class="card-container row mt-3 mb-5 gx-4 gy-3">
    <div class="col-md-12 col-lg-6">
        <div class="card--item bg-neutral-7 rounded-13 border p-3">
            <div
                class="card--header d-flex align-items-center justify-content-start border-2 pb-3 border-bottom ">
                <img src="/image/icon_card.svg" alt="icon kartu" class="card--icon">
                <a class="fw-bold ms-3 fs-4 text-blue-3" href="/dashboard/card/list">Card List</a>
            </div>
            <div class="card--content d-flex flex-column flex-sm-row align-items-center justify-content-around">
                <div class="d-flex flex-column align-items-center">
                    <h4 class="fw-normal text-neutral-2">Register</h4>
                    <h1 class="fw-bolder fs-72 text-blue-3">{{registerCard}}</h1>
                </div>

                <div class="d-flex flex-column align-items-center">
                    <h4 class="fw-normal text-neutral-2">Unregister</h4>
                    <h1 class="fw-bolder fs-72 text-blue-3">{{unRegisterCard}}</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12 col-lg-6">
        <div class="card--item bg-neutral-7 rounded-13 border p-3">
            <div
                class="card--header d-flex align-items-center justify-content-start border-2 pb-3  border-bottom ">
                <img src="/image/icon_user.svg" alt="icon kartu" class="card--icon">
                <a class="fw-bold ms-3 fs-4 text-blue-3" href="/dashboard/user/list">User List</a>
            </div>
            <div class="card--content d-flex flex-column flex-sm-row align-items-center justify-content-around">
                <div class="d-flex flex-column align-items-center">
                    <h4 class="fw-normal text-neutral-2">All User</h4>
                    <h1 class="fw-bolder fs-72 text-blue-3"> {{userCount}} </h1>
                </div>

                <div class="d-flex flex-column align-items-center">
                    <h4 class="fw-normal text-neutral-2">Unpaired</h4>
                    <h1 class="fw-bolder fs-72 text-blue-3"> {{userUnPairCount}} </h1>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12 col-lg-6">
        <div class="card--item bg-neutral-7 rounded-13 border p-3">
            <div
                class="card--header d-flex align-items-center justify-content-start border-2 pb-3  border-bottom ">
                <img src="/image/icon_room.svg" alt="icon kartu" class="card--icon">
                <a class="fw-bold ms-3 fs-4 text-blue-3" href="/dashboard/room/list">Room List</a>
            </div>
            <div class="card--content d-flex align-items-center justify-content-around">
                <div class="d-flex flex-column align-items-center">
                    <h4 class="fw-normal text-neutral-2">Available Room</h4>
                    <h1 class="fw-bolder fs-72 text-blue-3">{{roomCount}}</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12 col-lg-6">
        <div class="card--item bg-neutral-7 rounded-13 border p-3">
            <div
                class="card--header d-flex align-items-center justify-content-start border-2 pb-3  border-bottom ">
                <img src="/image/icon_log.svg" alt="icon kartu" class="card--icon">
                <a class="fw-bold ms-3 fs-4 text-blue-3" href="#">Activity</a>
            </div>
            <div class="card--content d-flex align-items-center justify-content-around">
                <div class="d-flex flex-column align-items-center">
                    <h4 class="fw-normal text-neutral-2">Activity</h4>
                    <h1 class="fw-bolder fs-72 text-blue-3">{{roomRecord}}</h1>
                </div>
            </div>
        </div>
    </div>
</div>