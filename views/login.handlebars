<div class="auth--form d-md-block d-none col-md-5 col-lg-6 bg-blue-2"></div>
<div class="auth--form d-flex justify-content-center align-items-center col-md-7 col-lg-6 bg-neutral-6">
    <form method="post"
        class="form--container d-flex flex-column justify-content-between bg-neutral-7 px-5 py-3 rounded-13 shadow-c-1">
        <div class="d-flex justify-content-between mb-4">
            <a href="/auth/login" class="login active fw-bolder fs-5 text-neutral-2">Login</a>
            <a href="/auth/register" class="register fw-bolder fs-5 text-neutral-2">Register</a>
        </div>
        <div>
            <div class="input-group">
                <div class="input-group-prepend d-flex align-items-center">
                    <img src="/image/icon_username.svg" alt="">
                </div>
                <input type="text" class="form-control" name="username" placeholder="Username" aria-label="Username" required>
            </div>
            <small class="text-danger-1" id="username--error"></small>
        </div>

        <div>
            <div class="input-group">
                <div class="input-group-prepend d-flex align-items-center">
                    <img src="/image/icon_lock.svg" alt="">
                </div>
                <input type="password" name="password" class="form-control" placeholder="Password" aria-label="Password" required>
            </div>
            <small class="text-danger-1" id="password--error"></small>
        </div>
        <div class="mb-4">
            <button id="submit"
                class="btn bg-blue-3 text-neutral-7 fw-bold px-5 rounded-13 py-2 d-block">Login</button>
            <a href="/auth/forget" class="d-block text-center text-blue-4 mt-2">Forgot your password?</a>
        </div>
    </form>
</div>
