                        <p class="fw-bold ms-2 heading">Accaptable Cards</p>
                    </div>
                </div>
            </div>

            <div class="item-container mt-2">
                <form class="d-flex justify-content-between mt-2" id="addCardForm">
                    <input type="text" class="bg-neutral-4 me-3 py-1 px-2 rounded-10" id="searchCard" data-cardNumber="">
                    <button type="button" class="p-1 rounded-10 bg-blue-1 text-center fw-bold" id="addBtn">Add</button>
                </form>
                <div class="data-container mt-2"></div>
            </div>
            <div class="col-12 mt-3">
                <p class="text-center text-neutral-1" id="logs-show-more">Show More</p>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class=" bg-neutral-6 px-3 py-2 rounded-13 ">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="fw-bold text-blue-3">Request User</h3>
                <p class="pointer" id="giveAllAccess">Give All Access</p>
            </div>

            <div class="activity-access row p-3 mt-2">    
            </div>

            <div class="col-12 mt-3">
                <p class="text-center text-neutral-1 pointer" id="request-show-more">Show More</p>
            </div>
        </div>
    </div>
</div>